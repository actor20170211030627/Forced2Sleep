<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.actor.forced2sleep">
    <!-- 安装app -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" /> <!-- 华为手机管家, 应用自启动页面 -->
    <uses-permission android:name="com.huawei.permission.external_app_settings.USE_COMPONENT" /> <!-- <uses-permission -->
    <!-- android:name="android.permission.BIND_VPN_SERVICE" -->
    <!-- tools:ignore="ProtectedPermissions" /> -->
    <!-- 获取进程 -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" /> <!-- VPN -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.NovelActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashActivity"
            android:excludeFromRecents="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- <data android:scheme="hehehe"/>&lt;!&ndash;作用:不在桌面创建图标&ndash;&gt; -->
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:excludeFromRecents="false">
            <intent-filter>
                <action android:name="${applicationId}.startup" />

                <!-- android.intent.action.MAIN -->
                <category android:name="android.intent.category.DEFAULT" />
                <!-- 如果在这个LAUNCHER里写了data,就没有启动图标了 -->
                <data android:scheme="forced2sleep" />
            </intent-filter>
        </activity> <!-- 单例启动模式,不在最近任务列表中android:launchMode="singleInstance" -->
        <activity
            android:name=".activity.EnterPwdActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" />
        <activity android:name=".activity.HostManageActivity" />
        <activity android:name=".activity.NovelSpiderActivity" /> <!-- 开机启动的广播 -->
        <receiver android:name=".receiver.BootReceiver">

            <!-- 3.调频道,过滤广播:开机广播 -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver> <!-- 锁屏服务 -->
        <service
            android:name=".service.ToastNoticeService"
            android:enabled="true"
            android:exported="true" /> <!-- 1.添加服务: https://developer.android.google.cn/guide/topics/connectivity/vpn#add_a_service -->
        <service
            android:name=".service.OpenVPNService"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>

            <!-- 始终开启的 VPN -->
            <meta-data
                android:name="android.net.VpnService.SUPPORTS_ALWAYS_ON"
                android:value="true" />
        </service>
    </application>

</manifest>